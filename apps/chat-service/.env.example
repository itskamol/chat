# Database Configuration
DATABASE_URL=mongodb://localhost:27017/chat-db
DATABASE_NAME=chat-db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGIN=*

# gRPC Configuration
GRPC_PORT=5000
GRPC_URL=localhost:5000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DEST=./uploads

# Security
BCRYPT_ROUNDS=12
HELMET_ENABLED=true

# Message Queue
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs
SWAGGER_TITLE=Chat Service API
SWAGGER_DESCRIPTION=Real-time chat service API documentation
SWAGGER_VERSION=1.0.0

# External Services
USER_SERVICE_URL=http://localhost:3002
FILE_SERVICE_URL=http://localhost:3003
MEDIA_SERVICE_URL=http://localhost:3004
