# Local Development Environment (Non-Docker)
# Bu fayl mahalliy ishlab chiqish uchun mo'ljallangan (Docker ishlatmasdan)
# .env.development bilan deyarli bir xil, lekin lokal development naming convention uchun

# Common Environment
NODE_ENV=development

# Database Configuration (Local MongoDB)
MONGO_URI=mongodb://localhost:27017

# RabbitMQ Configuration (Local)
MESSAGE_BROKER_URL=amqp://localhost:5672

# JWT Configuration
JWT_SECRET=local_development_jwt_secret_key_12345

# Service Ports (Local development)
GATEWAY_PORT=8080
USER_SERVICE_PORT=8081
CHAT_SERVICE_PORT=8082
NOTIFICATION_SERVICE_PORT=8083
FILE_SERVICE_PORT=8084
MEDIA_SERVER_PORT=8085

# API Base URLs (Local development)
GATEWAY_URL=http://localhost:8080
USER_SERVICE_URL=http://localhost:8081
CHAT_SERVICE_URL=http://localhost:8082
NOTIFICATION_SERVICE_URL=http://localhost:8083
FILE_SERVICE_URL=http://localhost:8084
MEDIA_SERVER_URL=http://localhost:8085

# Frontend Configuration (Local development)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# Media/WebRTC Configuration (Local development)
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_RTP_MIN_PORT=20000
MEDIASOUP_RTP_MAX_PORT=20020
NEXT_PUBLIC_TURN_SERVER_URL=turn:localhost:3478
NEXT_PUBLIC_TURN_SERVER_USERNAME=turnuser
NEXT_PUBLIC_TURN_SERVER_PASSWORD=turnpassword

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/ogg,application/pdf,text/plain

# Email Configuration (Development - agar lokal SMTP server bo'lsa)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=dev@localhost

# Logging
LOG_LEVEL=debug
