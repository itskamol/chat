# Gateway Service - Production Environment
# Bu fayl gateway uchun production muhitidagi maxsus sozlamalar

# Service Configuration
PORT=8080
SERVICE_NAME=gateway

# JWT Configuration (CRITICAL: Production da juda kuchli secret ishlatish kerak!)
JWT_SECRET=PRODUCTION_STRONG_JWT_SECRET_KEY_MIN_32_CHARS_LONG_RANDOM_STRING

# Internal Service URLs (Production)
USER_SERVICE_URL=http://user:8081
CHAT_SERVICE_URL=http://chat:8082
NOTIFICATION_SERVICE_URL=http://notification:8083
FILE_SERVICE_URL=http://file-service:3001
MEDIA_SERVICE_URL=http://media_server_container:3001

# CORS Configuration (Production)
CORS_ORIGIN=https://yourdomain.com

# Security
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging (Production)
LOG_LEVEL=error

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
