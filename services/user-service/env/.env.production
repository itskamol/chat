# User Service - Production Environment
# Bu fayl user-service uchun production muhitidagi maxsus sozlamalar

# Service Configuration
PORT=8081
SERVICE_NAME=user-service

# Database Configuration (Production)
MONGO_URI=mongodb://production_user:production_password@mongodb:27017/user-service-db?authSource=admin

# JWT Configuration (CRITICAL: Production da juda kuchli secret ishlatish kerak!)
JWT_SECRET=PRODUCTION_STRONG_JWT_SECRET_KEY_MIN_32_CHARS_LONG_RANDOM_STRING

# Message Broker (Production)
MESSAGE_BROKER_URL=amqp://production_user:production_password@rabbitmq:5672

# Service Discovery (Production)
USER_SERVICE_URL=http://user:8081

# Logging (Production)
LOG_LEVEL=error

# Security
BCRYPT_ROUNDS=12
