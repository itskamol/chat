# User Service - Docker Development Environment
# Bu fayl user-service uchun Docker muhitidagi maxsus sozlamalar

# Service Configuration
PORT=8081
SERVICE_NAME=user-service

# Database Configuration
MONGO_URI=mongodb://root:password@mongodb:27017/user-service-db?authSource=admin

# JWT Configuration
JWT_SECRET=docker_development_jwt_secret_key_12345

# Message Broker
MESSAGE_BROKER_URL=amqp://guest:guest@rabbitmq:5672

# Service Discovery
USER_SERVICE_URL=http://user:8081

# Logging
LOG_LEVEL=debug
