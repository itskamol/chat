# Notification Service - Production Environment
# Bu fayl notification-service uchun production muhitidagi maxsus sozlamalar

# Service Configuration
PORT=8083
SERVICE_NAME=notification-service

# Message Broker (Production)
MESSAGE_BROKER_URL=amqp://production_user:production_password@rabbitmq:5672

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.your-production-provider.com
SMTP_PORT=587
SMTP_USER=your_production_email@yourdomain.com
SMTP_PASS=YOUR_PRODUCTION_EMAIL_PASSWORD
EMAIL_FROM=noreply@yourdomain.com

# SendinBlue/Brevo Configuration (if using)
SENDINBLUE_APIKEY=YOUR_PRODUCTION_SENDINBLUE_API_KEY

# Rate Limiting (Production)
EMAIL_RATE_LIMIT_PER_HOUR=100

# Logging (Production)
LOG_LEVEL=error

# Security
EMAIL_ENCRYPTION_KEY=PRODUCTION_EMAIL_ENCRYPTION_KEY_32_CHARS
