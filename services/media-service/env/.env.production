# Media Service - Production Environment
# Bu fayl media-service uchun production muhitidagi maxsus sozlamalar

# Service Configuration
PORT=3001
SERVICE_NAME=media-service

# MediaSoup Configuration (Production)
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=YOUR_PUBLIC_SERVER_IP
MEDIASOUP_RTP_MIN_PORT=20000
MEDIASOUP_RTP_MAX_PORT=20020

# Worker Configuration (Production)
MEDIASOUP_WORKER_LOG_LEVEL=warn
MEDIASOUP_NUM_WORKERS=4

# Security
MEDIA_ENCRYPTION_KEY=PRODUCTION_MEDIA_ENCRYPTION_KEY_32_CHARS

# Performance (Production)
MAX_CONCURRENT_ROOMS=100
MAX_PARTICIPANTS_PER_ROOM=50

# Logging (Production)
LOG_LEVEL=error
DEBUG=

# Monitoring
METRICS_ENABLED=true
