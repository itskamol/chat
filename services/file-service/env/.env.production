# File Service - Production Environment
# Bu fayl file-service uchun production muhitidagi maxsus sozlamalar

# Service Configuration
PORT=3001
SERVICE_NAME=file-service

# File Upload Configuration (Production)
MAX_FILE_SIZE_MB=50
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/ogg,application/pdf,text/plain

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID=YOUR_PRODUCTION_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_PRODUCTION_AWS_SECRET_KEY
AWS_REGION=us-east-1
BUCKET_NAME=chat-app-production-files
S3_FILE_BASE_URL=https://s3.amazonaws.com/chat-app-production-files

# Storage Configuration
STORAGE_TYPE=s3

# Security
FILE_ENCRYPTION_KEY=PRODUCTION_FILE_ENCRYPTION_KEY_32_CHARS_LONG

# Logging (Production)
LOG_LEVEL=error
