# File Service - Docker Development Environment
# Bu fayl file-service uchun Docker muhitidagi maxsus sozlamalar

# Service Configuration
PORT=8084
SERVICE_NAME=file-service

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/ogg,application/pdf,text/plain

# AWS Configuration (Development)
AWS_ACCESS_KEY_ID=your_dev_aws_access_key
AWS_SECRET_ACCESS_KEY=your_dev_aws_secret_key
AWS_REGION=us-east-1
BUCKET_NAME=chat-app-dev-bucket

# Logging
LOG_LEVEL=debug
