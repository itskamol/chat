# Chat Service - Production Environment
# Bu fayl chat-service uchun production muhitidagi maxsus sozlamalar

# Service Configuration
PORT=8082
SERVICE_NAME=chat-service

# Database Configuration (Production)
MONGO_URI=mongodb://production_user:production_password@mongodb:27017/chat-service-db?authSource=admin

# JWT Configuration (CRITICAL: Production da juda kuchli secret ishlatish kerak!)
JWT_SECRET=PRODUCTION_STRONG_JWT_SECRET_KEY_MIN_32_CHARS_LONG_RANDOM_STRING

# Message Broker (Production)
MESSAGE_BROKER_URL=amqp://production_user:production_password@rabbitmq:5672

# External Services (Production)
FILE_SERVICE_URL=http://file-service:8084/api/files
MEDIA_SERVER_URL=http://media_server_container:8085

# File Upload Validation (Production)
MAX_FILE_SIZE_MB=50

# Logging (Production)
LOG_LEVEL=error
