# Chat Service - Docker Development Environment
# Bu fayl chat-service uchun Docker muhitidagi maxsus sozlamalar

# Service Configuration
PORT=8082
SERVICE_NAME=chat-service

# Database Configuration
MONGO_URI=mongodb://root:password@mongodb:27017/chat-service-db?authSource=admin

# JWT Configuration
JWT_SECRET=docker_development_jwt_secret_key_12345

# Message Broker
MESSAGE_BROKER_URL=amqp://guest:guest@rabbitmq:5672

# External Services
FILE_SERVICE_URL=http://file-service:8084/api/files
MEDIA_SERVER_URL=http://media_server_container:8085

# File Upload Validation
MAX_FILE_SIZE_MB=10

# Logging
LOG_LEVEL=debug
