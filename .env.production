# Production Environment
# Bu fayl production muhiti uchun mo'ljallangan

# Common Environment
NODE_ENV=production

# Database Configuration (Production MongoDB)
MONGO_URI=mongodb://production_user:production_password@production_mongodb_host:27017/production_db?authSource=admin

# RabbitMQ Configuration (Production)
MESSAGE_BROKER_URL=amqp://production_user:production_password@production_rabbitmq_host:5672

# JWT Configuration (CRITICAL: Production da juda kuchli secret ishlatish kerak!)
JWT_SECRET=PRODUCTION_STRONG_JWT_SECRET_KEY_MIN_32_CHARS_LONG_RANDOM_STRING

# Service Ports
GATEWAY_PORT=8080
USER_SERVICE_PORT=8081
CHAT_SERVICE_PORT=8082
NOTIFICATION_SERVICE_PORT=8083
FILE_SERVICE_PORT=8084
MEDIA_SERVER_PORT=8085

# API Base URLs (Production internal communication)
GATEWAY_URL=http://gateway:8080
USER_SERVICE_URL=http://user:8081
CHAT_SERVICE_URL=http://chat:8082
NOTIFICATION_SERVICE_URL=http://notification:8083
FILE_SERVICE_URL=http://file-service:3001
MEDIA_SERVER_URL=http://media_server_container:8085

# Frontend Configuration (Production public URLs)
NEXT_PUBLIC_API_BASE_URL=https://yourdomain.com/api
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/ws

# Media/WebRTC Configuration (Production)
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=YOUR_PUBLIC_SERVER_IP
MEDIASOUP_RTP_MIN_PORT=20000
MEDIASOUP_RTP_MAX_PORT=20020
NEXT_PUBLIC_TURN_SERVER_URL=turns:yourdomain.com:5349
NEXT_PUBLIC_TURN_SERVER_USERNAME=production_turn_user
NEXT_PUBLIC_TURN_SERVER_PASSWORD=production_turn_password

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/ogg,application/pdf,text/plain

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_production_email@yourdomain.com
SMTP_PASS=your_production_email_password
EMAIL_FROM=noreply@yourdomain.com

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID=YOUR_PRODUCTION_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_PRODUCTION_AWS_SECRET_KEY
AWS_REGION=us-east-1
BUCKET_NAME=chat-app-production-bucket

# Security & Performance
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://yourdomain.com
